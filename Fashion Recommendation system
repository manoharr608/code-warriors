                                    { name: 'Ray-Ban Sunglasses', category: 'Accessory', color: '#1E1E1E' }
                                ],
                                note: 'Classic American style. Always polished.'
                            }
                        },
                        female: {
                            'garden party': {
                                title: 'Prep School',
                                items: [
                                    { name: 'Navy Blazer', category: 'Outerwear', color: '#0a1928' },
                                    { name: 'Pink Dress', category: 'Dress', color: '#FF69B4' },
                                    { name: 'Pearl Necklace', category: 'Accessory', color: '#F0E5D8' },
                                    { name: 'Espadrilles', category: 'Shoes', color: '#D2B48C' },
                                    { name: 'Straw Bag', category: 'Bag', color: '#F5F5DC' }
                                ],
                                note: 'Sweet but sophisticated. Perfectly put together.'
                            }
                        }
                    }
                };

                // Default fallback
                let outfit = {
                    title: 'Signature Style',
                    items: [
                        { name: 'Navy Wool Blazer', category: 'Outerwear', color: '#0a1928' },
                        { name: 'White Oxford Shirt', category: 'Top', color: '#FFFFFF' },
                        { name: 'Charcoal Trousers', category: 'Bottoms', color: '#36454F' },
                        { name: 'Brown Leather Oxfords', category: 'Shoes', color: '#8B4513' },
                        { name: 'Silver Watch', category: 'Accessory', color: '#C0C0C0' }
                    ],
                    note: 'Timeless elegance for any occasion.'
                };

                try {
                    if (outfits[aesthetic] && outfits[aesthetic][gender] && outfits[aesthetic][gender][occasion]) {
                        outfit = outfits[aesthetic][gender][occasion];
                    } else {
                        // Try to find any occasion for this gender/aesthetic
                        const genderOutfits = outfits[aesthetic]?.[gender];
                        if (genderOutfits) {
                            const firstOccasion = Object.keys(genderOutfits)[0];
                            outfit = genderOutfits[firstOccasion];
                        }
                    }
                } catch (e) {
                    console.log('Using default outfit');
                }

                return outfit;
            }

            // Display outfit
            function displayOutfit(outfit) {
                // Update profile badge
                const skinToneName = document.querySelector('.skin-tone-card.active span').textContent;
                const skinTypeName = skinTypeSelect.options[skinTypeSelect.selectedIndex].text.split(' ¬∑ ')[0];
                activeProfileBadge.innerHTML = `<i class="fas fa-user"></i> ${skinToneName} ¬∑ ${skinTypeName}`;

                // Update title
                lookbookTitle.textContent = outfit.title + ' Collection';

                // Generate main clothing grid
                clothingGrid.innerHTML = outfit.items.map((item, index) => {
                    const imageUrl = fashionImages[item.name] || defaultImage;
                    return `
                        <div class="clothing-card" data-index="${index}">
                            <div class="image-container">
                                <img src="${imageUrl}" alt="${item.name}" loading="lazy">
                                <div class="image-overlay">
                                    <div class="overlay-content">
                                        <div class="category">${item.category}</div>
                                        <div class="name">${item.name}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-details">
                                <div class="info">
                                    <h4>${item.name}</h4>
                                    <div class="category">${item.category}</div>
                                </div>
                                <div class="color-indicator">
                                    <span class="color-dot" style="background-color: ${item.color};"></span>
                                    <span class="color-name">${getColorName(item.color)}</span>
                                </div>
                            </div>
                        </div>
                    `;
                }).join('');

                // Generate featured pieces (first 3 items)
                const featuredItems = outfit.items.slice(0, 3);
                featuredGrid.innerHTML = featuredItems.map(item => {
                    const imageUrl = fashionImages[item.name] || defaultImage;
                    return `
                        <div class="featured-item">
                            <img src="${imageUrl}" alt="${item.name}" loading="lazy">
                            <h5>${item.name}</h5>
                            <p>${item.category} ¬∑ ${getColorName(item.color)}</p>
                        </div>
                    `;
                }).join('');

                // Update fabric recommendation
                fabricText.textContent = fabricBySkinType[selectedSkinType] || fabricBySkinType.normal;

                // Update styling note
                footnoteText.textContent = outfit.note;

                // Show content
                initialMessage.style.display = 'none';
                outfitContent.style.display = 'block';
            }

            // Generate button click
            generateBtn.addEventListener('click', (e) => {
                e.preventDefault();
                
                initialMessage.style.display = 'none';
                outfitContent.style.display = 'none';
                loadingSpinner.style.display = 'flex';

                setTimeout(() => {
                    const outfit = generateOutfit();
                    displayOutfit(outfit);
                    loadingSpinner.style.display = 'none';
                }, 1800);
            });
        })();
    </script>
</body>
</html>
